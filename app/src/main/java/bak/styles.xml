<?xml version="1.0" encoding="utf-8"?>
    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <!-- =========================JieXieYinTheme start =================================-->

    下拉ActionBar樣式
    <style name="Widget.Custom.PtrHeader" parent="android:Widget">
        <item name="ptrHeaderBackground">@color/ptr_header_background</item>下拉ActionBar的背景顏色,不設置會默認和actionbar顏色一樣
        <item name="ptrHeaderTitleTextAppearance">@style/TextAppearance.Custom.PtrHeader.Title</item>下拉ActionBar字體樣式
        <item name="ptrProgressBarStyle">inside</item>
        <item name="ptrProgressBarColor">#fff</item>下拉進度條的顏色

        <item name="ptrPullText">下拉刷新...</item>
        <item name="ptrRefreshingText">正在载入</item>
        <item name="ptrReleaseText">Let go if you want me to refresh!</item>
    </style>

    <style name="TextAppearance.Custom.PtrHeader.Title" parent="android:TextAppearance.Large.Inverse">
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="GNowProgressBar" parent="SmoothProgressBar">SmoothProgressBar樣式
        <item name="spb_stroke_separator_length">0dp</item>
        <item name="spb_sections_count">2</item>
        <item name="spb_speed">1.7</item>
        <item name="spb_progressiveStart_speed">2</item>
        <item name="spb_progressiveStop_speed">3.4</item>
        <item name="spb_interpolator">spb_interpolator_acceleratedecelerate</item>
        <item name="spb_mirror_mode">true</item>
        <item name="spb_reversed">true</item>
        <item name="spb_colors">@array/gplus_colors</item>
        <item name="spb_progressiveStart_activated">true</item>
    </style>

    <!--=============================ActionBarStyle  start===================================-->
    <style name="GreenActionBar" parent="Widget.AppCompat.ActionBar">
        <!-- support library compatibility -->
        <!--<item name="background">@drawable/ab_solid_c</item>-->
        <item name="background">@color/actionbar_light_translucent</item>
        <item name="titleTextStyle">@style/JieXieYinTheme.TitleTextStyle</item>
        <item name="subtitleTextStyle">@style/JieXieYinTheme.SubTitleTextStyle</item>
    </style>

    <style name="JieXieYinTheme.TitleTextStyle" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="JieXieYinTheme.SubTitleTextStyle" parent="TextAppearance.AppCompat.Widget.ActionBar.Subtitle">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">normal</item>
    </style>
    <!--===============================ActionBarStyle  end================================= -->

    <style name="sliding_head_text">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">12sp</item>
    </style>


    <style name="ProgressBar.Horizontal" parent="@android:style/Widget.ProgressBar.Horizontal"></style>

    <style name="personal_center_txt_title">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/personal_center_title_txt_color</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <style name="personal_center_txt_value">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/personal_center_value_txt_color</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>







