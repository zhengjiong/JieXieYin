<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#efefef"
    android:padding="10dp">

    <TextView
        android:id="@+id/forum_title_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="3dp"
        android:text=""
        android:textColor="#121212"
        android:textSize="17sp" 
        android:layout_marginTop="3dp"/>
    
    
     <TextView
        android:id="@+id/forum_content_id"
        android:layout_below="@+id/forum_title_id"
        android:lines="2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:text=""
        android:textColor="#787878"
        android:textSize="15sp" />
     
     <LinearLayout  
        android:layout_below="@+id/forum_content_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="9dp"
        android:layout_marginBottom="3dp"
        android:gravity="center_vertical">
        
         <ImageView
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:background="@drawable/forum_username"/>
         
          <TextView
	        android:id="@+id/forum_author_id"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:paddingLeft="3dp"
	        android:text=""
	        android:textColor="#787878"
	        android:textSize="12sp" 
	        android:layout_weight="1"
	        android:layout_marginLeft="2dp"/>
          
          <ImageView
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:background="@drawable/forum_comment"
	        android:layout_gravity="right"
	        android:layout_marginRight="2dp"/>
         
          <TextView
	        android:id="@+id/forum_comment_id"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:paddingLeft="3dp"
	        android:text="20"
	        android:textColor="#787878"
	        android:textSize="13sp" 
	        android:layout_gravity="right"/>
     </LinearLayout>

</RelativeLayout>

