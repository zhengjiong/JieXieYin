<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_item_bg"
    android:orientation="horizontal" >

    <ImageView 
        android:id="@+id/sliding_list_item_icon"
    	android:layout_width="wrap_content"
    	android:layout_height="match_parent"    
    	android:src="@drawable/ic_home_color_20"
    	android:scaleType="center"
    	android:paddingLeft="12dp"
    />
    <TextView
        android:id="@+id/sliding_list_item_text"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical|left"
        android:paddingLeft="15dp"
        android:text="地球"
        android:textColor="@color/sliding_menu_list_item_fontcolor"
        android:textSize="@dimen/txt_size_slidingmenu_list_item" />

</LinearLayout>
